<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.banking.transactionmanagementsystem.ui.controller.AccountDetailsController"
      spacing="10" padding="10">

    <!-- Account info -->
    <HBox spacing="20">
        <Label text="IBAN:"/>
        <Label fx:id="ibanLabel"/>
    </HBox>
    <HBox spacing="20">
        <Label text="Balance:"/>
        <Label fx:id="balanceLabel"/>
    </HBox>

    <Separator/>

    <!-- Deposit -->
    <HBox spacing="10">
        <TextField fx:id="depositField" promptText="Deposit amount"/>
        <Button text="Deposit" onAction="#onDeposit"/>
    </HBox>

    <!-- Withdraw -->
    <HBox spacing="10">
        <TextField fx:id="withdrawField" promptText="Withdraw amount"/>
        <Button text="Withdraw" onAction="#onWithdraw"/>
    </HBox>

    <!-- Transfer -->
    <HBox spacing="10">
        <TextField fx:id="transferAmountField" promptText="Amount"/>
        <TextField fx:id="transferIbanField" promptText="Target IBAN"/>
        <Button text="Transfer" onAction="#onTransfer"/>
    </HBox>

    <Separator/>

    <!-- Transaction list -->
    <Label text="Transactions:"/>
    <ListView fx:id="transactionsListView" prefHeight="200"/>
</VBox>

